<p id="notice"><%= notice %></p>

<h1>Listing Details</h1>

<table>
  <thead>
    <tr>
      <th>Bhproduct number</th>
      <th>Quantity</th>
      <th>Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.bhproduct_number %></td>
        <td><%= detail.quantity %></td>
        <td><%= detail.inventorysession_id %></td>
        <td><%= Product.find_by(bhproduct_number: detail.bhproduct_number).name %></td>
        <td><%= link_to 'Show', detail, class: "btn small" %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail), class: "btn small" %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn small negative" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

