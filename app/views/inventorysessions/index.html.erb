<h1>Inventory Sessions</h1>

<table class="details">
  <% @count = 0 %>
  <thead>
    <tr>
      <th>Sessiondate</th>
      <th>Truck</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventorysession.each do |inventorysession| %>
     <% @count = @count + 1 %>
      <% if ((@count.to_i % 2) == 0) %>
        <tr class="even">
      <% else %>
        <tr class="odd">
      <% end %>
        <td><%= inventorysession.sessiondate %></td>
        <td><%= inventorysession.truck.name %></td>
        <td><%= link_to 'Show', inventorysession, class: "btn small" %></td>
        <td><%= link_to 'Edit', edit_inventorysession_path(inventorysession), class: "btn small" %></td>
        <td><%= link_to 'Delete', inventorysession, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn small negative" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Session', new_inventorysession_path %>
