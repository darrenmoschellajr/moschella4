<%= form_for(@par_level) do |f| %>
  <% if @par_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@par_level.errors.count, "error") %> prohibited this par_level from being saved:</h2>

      <ul>
      <% @par_level.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field" style="margin-bottom:0px">
    <%= f.label "Product Number" %><br>
    <%= f.number_field :bhproduct_number %>
    <div class="productLookupResult alert" id="productLookupResult" style="width:170px">
      &nbsp;
    </div>
  </div>
  <div class="field">
    <%= f.label "Par Level" %><br>
    <%= f.number_field :parlevel %>
    <%= f.select :count_type, (["Piece","Case"]), :class => "count_type" %>
  </div>
  <% if @par_sheet %>
    <div class="field hidden">
      <%= f.label :par_sheets_id %><br>
      <%= f.number_field :par_sheets_id, :value => @par_sheet %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :par_sheets_id %><br>
      <%= f.number_field :par_sheets_id %>
    </div>
   <% end %>
  <br><br>
  <div class="actions">
    <%= f.submit "Submit", :disabled => true, :id => "parLevelSubmit" %>
  </div>
<% end %>
