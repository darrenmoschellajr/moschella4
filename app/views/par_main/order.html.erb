<h2>Orders</h2>

<table class ="default">
  <% @count = 0 %>
  <thead>
  <tr>
      <th style="padding-right:20px">Session date</th>
      <th>Truck</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @inv_sessions.each do |inv_session| %>
    <% @count = @count + 1 %>
      <% if ((@count.to_i % 2) == 0) %>
        <tr class="even">
      <% else %>
        <tr class="odd">
      <% end %>
          <td><%=inv_session.sessiondate.to_date %></td>
          <td><%=inv_session.truck.name %></td>
          <td style="padding-right:20px">&nbsp;</td>
          <% @paramstring = "/par_main/run?inventorysession_id=" + inv_session.id.to_s + "&par_sheet=" + params[:par_sheet] %>
          <td style="padding-right:20px"><%= link_to 'Generate Order', @paramstring , class: "btn small" %></td>
  </tr>
<% end %>
</table>


<%= link_to 'Back', par_sheets_path, class: "btn small left" %>