<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :bhproduct_number %><br>
    <%= f.number_field :bhproduct_number %>
  </div>
  <div class="field">
    <%= f.label "Count Preference" %><br>
    <%= f.select :count_preference, (["Case","Piece"]) %>
  </div>
  <div class="field">
    <%= f.label "Count per case" %><br>
    <%= f.number_field :case_amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
