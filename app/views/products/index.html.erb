<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="details">
  <% @count = 0 %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product #</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <% @count = @count + 1 %>
      <% if ((@count.to_i % 2) == 0) %>
        <tr class="even">
      <% else %>
        <tr class="odd">
      <% end %>
        <td><%= product.name %></td>
        <td><%= product.bhproduct_number %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn small" %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn small negative" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

